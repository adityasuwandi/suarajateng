<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/unavailable"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="PERSIAPAN SEBELUM KE TPS"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.    Pastikan bahwa anda telah menerima surat pemberitahuan dari KPPS 1 (satu) hari sebelum pemungutan suara."
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.    Datang ke TPS pada Hari Pemungutan Suara pada waktu yang telah ditentukan oleh Pera-turan Perundang-undangan yang berlaku."
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.    Membawa surat pemberitahuan yang sudah diterima dan kartu pemilih (untuk Pemilu Kepala Daerah dan Wakil Kepala Daerah)"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. 	Apabila belum menerima surat pemberitahuan, harap menghubungi petugas KPPS."
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/coblosIMG"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:src="@drawable/coblos1"
                android:layout_weight="0.5"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/coblosIMG2"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:src="@drawable/coblos2"
                android:layout_weight="0.5"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="MENCOBLOS"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.    Begitu Anda mendapat surat suara dari Kelompok Penyelenggara Pemungutan Suara (KPPS) dan hendak menuju bilik suara, bukalah surat suara lebar-lebar."
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.    Periksalah surat suara tersebut untuk melihat kemungkinan surat suara rusak. Jika ada kerusakan, Anda dapat minta surat suara pengganti kepada Ketua KPPS"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.    Pemberian suara pemilihan 1 (satu) Pasangan Calon dilakukan dengan cara mencoblos 1 (satu) kali pada:"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• kolom yang memuat foto dan nama Pasangan Calon; atau"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• kolom kosong yang tidak bergambar"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Surat suara dinyatakan sah apabila ditandatangani oleh Ketua KPPS dan diberi tanda coblos pada kolom yang memuat foto dan nama Pasangan Calon atau kolom kosong yang tidak bergambar."
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>
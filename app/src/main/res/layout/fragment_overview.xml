<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:padding="11dp"
    tools:context=".OverviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <android.support.v7.widget.CardView
            android:id="@+id/card_button_guide"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Persyaratan untuk \nPemilih"
                android:textColor="@color/colorText"
                android:textSize="22sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_button_tips"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tips Memilih\ndi TPS"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:textSize="22sp"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_button_hoax"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tips Mengetahui\nberita hoax"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:textSize="22sp"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_button_bantuan"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bantuan"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:textSize="22sp"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&quot;Becik Tur Nyenengke&quot;"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2018 - jateng.kpu.go.id"
            android:textColor="@color/colorText"
            android:gravity="center|bottom"/>
    </LinearLayout>

</FrameLayout>
